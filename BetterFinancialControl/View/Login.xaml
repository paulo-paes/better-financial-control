<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BetterFinancialControl.View.Login"
             Title="Login">
   
    <StackLayout VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand">
        <Label Text="Login" HorizontalOptions="Center" />
        <Entry Placeholder="Digite seu login" HorizontalOptions="Center" />

        <Label Text="Senha" HorizontalOptions="Center" />
        <Entry Placeholder="Digite sua senha" IsPassword="True" HorizontalOptions="Center" />
    </StackLayout>

</ContentPage>